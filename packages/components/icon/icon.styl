.v-icon
  line-height 1
  // width 1em
  // height 1em
  letter-spacing normal
  text-transform none
  white-space nowrap
  font-style normal
  word-wrap normal
  direction ltr
  text-align center
  position relative
  box-sizing initial
  fill currentColor
  display inline-flex
  align-items center
  justify-content center
  vertical-align middle
  user-select none
  cursor inherit
  fill currentColor
  overflow hidden
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  &.vicon:before
    display inline-block
    line-height 1
    font-family 'vicon'
  &-spin:before
    animation LoadingCircle 1.2s linear infinite
  svg
    display inline-block